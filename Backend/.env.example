# Database - Use MongoDB Atlas or local MongoDB
MONGO_URI=mongodb://localhost:27017/droneflux
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/droneflux

# JWT Secret - Generate a secure random string
JWT_SECRET=droneflux_super_secret_jwt_key_2024_secure

# Session Secret - Generate a secure random string  
SESSION_SECRET=droneflux_session_secret_key_2024_secure

# Google OAuth (Optional - for Google login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend URL - Update based on your deployment
FRONTEND_URL=http://localhost:8080

# Server Port
PORT=5000
