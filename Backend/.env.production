# Production Environment Variables for DroneFlux Backend
NODE_ENV=production
PORT=5000

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/droneflux-prod?retryWrites=true&w=majority

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secure-jwt-secret-key-for-production

# Google OAuth (Production credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Session Secret
SESSION_SECRET=your-super-secure-session-secret-for-production

# Frontend URL (Update with your Vercel frontend URL)
FRONTEND_URL=https://your-frontend-app.vercel.app

# CORS Origins (Add your production domains)
CORS_ORIGINS=https://your-frontend-app.vercel.app,https://your-domain.com
